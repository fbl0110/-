  border-bottom: 2px solid #ccc;
  background-color: #fff;
}
.self i{
  padding-left: 40rpx;
}
.self text{
  padding-left: 26rpx;
}
.van-card{
  border-bottom: 1px solid #ccc;
}
.price{
  position: relative;
  height: 90rpx;

}
.price .all_price{
  position: absolute;
  right: 10rpx;
  top: 30rpx;
}
.pay{
  height: 86rpx;
  margin-top: 20rpx;
  /* border: 1px solid red; */
