  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.nopay{
  padding-left: 20rpx;
}
.nopay .nocolor{
  color: #f05a25;
  padding-left: 10rpx;
}
.pay_image{
  display: flex;
  justify-content: center;
  align-items: center;
}
.pay_image image{
  width: 60rpx;
  height: 60rpx;
  padding-right: 8rpx;
}
.van-checkbox{
  padding-top: 20rpx;
  padding-bottom: 5rpx;
