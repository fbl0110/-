<view class="box">
  <van-cell-group>
  <van-field
    value="{{ username }}"
    clearable
    label="收货人"
    placeholder="请输入收货人姓名"
    bind:click-icon="onClickIcon"
  />
</van-cell-group>
  <!-- 性别 -->
  <van-radio-group value="{{ radio }}" bind:change="onChange">
  <van-cell-group>
    <van-cell title="单选框 1" clickable data-name="1" bind:click="onClick">
      <van-radio slot="right-icon" name="1" />
    </van-cell>
    <van-cell title="单选框 2" clickable data-name="2" bind:click="onClick">
      <van-radio slot="right-icon" name="2" />
    </van-cell>
  </van-cell-group>
</van-radio-group>


<van-field
    value="{{ username }}"
    clearable
    label="手机号码"
    placeholder="请输入收货人手机号码"
    bind:click-icon="onClickIcon"
  />


  <van-cell title="所在地区" is-link bind:click="showPopup" />
<van-popup
  show="{{ show }}"
  round
  position="bottom"
  custom-style="height: 70%"
  bind:close="onClose"
  
  
>
<van-area
  area-list="{{ areaList }}"
  columns-placeholder="{{ ['请选择', '请选择', '请选择'] }}"
  title="请选择"
  bind:confirm="add"
/>
</van-popup>

  <!-- 详细地址 -->
  <van-field
    value="{{ username }}"
    clearable
    label="详细地址"
    placeholder="请输入详细地址"
    bind:click-icon="onClickIcon"
  />


<!-- 标签 -->


</view>

