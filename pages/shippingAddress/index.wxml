  <van-cell-group>
  <van-field
    value="{{ username }}"
    clearable
    label="收货人"
    placeholder="请填写收货人姓名"
  />

  <van-field
    value="{{ password }}"
    label="手机号码"
    placeholder="请填写收货人手机号码"
  />
  <van-cell title="所在地区" is-link bind:click="showPopup"  columns-num />
