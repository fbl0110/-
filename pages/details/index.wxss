.face_box{
  display: flex;
  padding: 10rpx;
}
.face_box image{
  width: 60rpx;
  height: 60rpx;
}
.face_text{
  text-align: center;
}
.face_image{
  position: relative;
  display: flex;
  justify-content: space-between;
}
.face_image .face_number{
  position: absolute;
  bottom: 70rpx;
  right: 50rpx;
}
.img{
  margin-left: 50rpx;
  width: 440rpx;
  height: 440rpx;
  text-align: center;
