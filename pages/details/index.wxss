}
.img image{
  width: 150rpx;
  height: 200rpx;
  padding-left: 100rpx;
  /* text-align: center; */
}
.tang{
  margin: 10rpx;
  display: flex;
  margin-left: 30rpx;
  align-items: center;
  /* border: 1px solid red; */
  height: 100rpx;
}
.buyTang{
  padding-left: 50rpx;
}
.buyTang button:first-child{
  background-color: #f7f9ff;
  color: #6e87c4;
}
.buyTang button{
  background-color: #f5f5f5;
  margin-left: 30rpx;
  display: inline-block;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 70rpx;
  font-size: 30rpx;
  /* text-align: center; */
}
