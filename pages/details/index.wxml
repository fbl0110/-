        <view>摇摆羊</view>
      </view>
      <view class="face_text">好评,孩子很喜欢,敏感肌也可以用</view>

      <view class="face_image">
        <view class="img">
          <image src="../../assets/image/one.jpg"></image>
        </view>
        <view class="face_number">共1张</view>
      </view>
    </view> -->

    <!-- 商品详情  富文本-->
    <view class="richText">
      <rich-text class="rich" bindtap="rich" nodes="{{Detailgoods.g_details}}"></rich-text>
    </view>

    <!-- 加入购物车 -->
    <van-goods-action>
      <van-goods-action-icon icon="cart-o" text="购物车" info="{{shopcarNumber}}" bindtap="goAddShopcar" />
      <van-goods-action-button bind:click="onClickIcon" color="#8095cb" text="加入购物车" plain>
