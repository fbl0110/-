<view class="box">
  <!-- 轮播图 -->
  <swiper circular='true' class="swiper_box">
    <block>
      <swiper-item>
        <image src="{{Detailgoods.img}}"></image>
      </swiper-item>
    </block>

  </swiper>

  <!-- 价格,商品描述 -->
  <!-- <block   wx:for="{{Detailgoods}}" wx:key="g_name"> -->
  <view class="price_box">

    <view class="price_box1">
      <text class="discountPrice">¥{{Detailgoods.g_x_price}}</text>
      <text class="originalPrice">¥{{Detailgoods.g_y_price}}</text>
    </view>

    <view class="info">{{Detailgoods.g_name}}</view>
    <view class="sold">已售卖{{Detailgoods.buyed}}+件</view>
  </view>

  <!-- </block> -->


  <!-- sku -->
  <view class="sku_box">
    <van-cell title="选择" is-link bind:click="showPopup" />
    <van-popup show="{{ show }}" round position="bottom" custom-style="height: 60%" bind:close="onClose" >
      <van-card class="but"
      centered="true"
  price="{{Detailgoods.g_x_price}}"
  desc="已售卖{{Detailgoods.buyed}}+件"
  title="{{Detailgoods.g_name}}"
  thumb="{{ Detailgoods.img }}"
></van-card>
<van-stepper class="stepper" value="{{ value }}" bind:change="onChange" data-number="{{value}}" />

<view class="skuBig_box">
<view class="tang">
<view>糖度</view>
<view class="buyTang" bindtap="buyTang">
  <button>半份糖</button>
  <button>单份糖</button>
</view>
</view>

<view class="tang">
  <view>奶</view>
<view class="buyTang">
  <button>无奶</button>
  <button>单份奶</button>
  <button>双份奶</button>
</view>
</view>

<view class="tang">
  <view>温度</view>
<view class="buyTang">
  <button>冰</button>
  <button>热</button>
</view>
</view>
</view>
    </van-popup>
  </view>

  <!-- 运费 -->
  <view class="fare">
    <!-- 运费 \t \t 免运费 -->
    <van-cell title="运费" value="免运费" />
  </view>

  <!-- 分割线 -->
  <van-divider contentPosition="center" customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
    瑞幸潮品自营 \t 好物品质保证 \t购物畅选无忧
  </van-divider>

  <!-- 评价 -->
  <view>
    <!-- <van-cell title="评价(13)" is-link value="查看全部" /> -->

    <!-- 评价大盒子 -->
    <!-- <view> -->
      <!-- 用户头像 -->
