
<view class="order_box">
  <van-tabs sticky class="aaa" title-active-color="#fafafa" color="#fafafa">
    <van-tab title="已支付">
      <view class="yzf" wx:for="{{order}}" wx:key="item">
        <view class="yzf_da" wx:if="{{item.o_paragraph==1}}">
          <view class="yzf_db" wx:for="{{item.orderDetail}}" wx:key="idd">
            <view class="yzf_name">
              <image class="yzfimg" src="{{item.img}}"></image>
              <view>{{item.g_name}}</view>
            </view>
            <view class="yzf_sljg">
              <view>x{{item.sh_number}}</view>
              <view>价格:{{item.g_x_price}}</view>
            </view>
          </view>
          <view class="zj_price">
            <view>总价:{{item.o_z_price}}</view>
          </view>
        </view>
       
      </view>
    </van-tab>
    <van-tab title="未支付">
      <view class="yzf" wx:for="{{order}}" wx:key="item">
        <view class="yzf_da" >
          <view class="yzf_db" wx:for="{{item.orderDetail}}" wx:key="id">
            <view class="yzf_name">
              <image class="yzfimg" src="{{item.img}}"></image>
              <view>{{item.g_name}}</view>
            </view>
            <view class="yzf_sljg">
              <view>x{{item.sh_number}}</view>
              <view>价格:{{item.g_x_price}}</view>
            </view>
          </view>
          <view class="zj_price">
            <view>总价:{{item.o_z_price}}</view>
            <van-button type="warning" size="small">立即付款</van-button>
          </view>
        </view>
      </view>
    </van-tab>
  </van-tabs>
</view>

