
<view class="order_box">
  <van-tabs sticky class="aaa" title-active-color="#fafafa" color="#fafafa">
    <van-tab title="已支付">
      <view class="yzf" wx:for="{{order}}" wx:key="item">
        <view class="yzf_da" wx:if="{{item.o_paragraph==1}}">
          <view class="yzf_db" wx:for="{{item.orderDetail}}" wx:key="idd">
            <view class="yzf_name">
              <image class="yzfimg" src="{{item.img}}"></image>
              <view>{{item.g_name}}</view>
            </view>
            <view class="yzf_sljg">
              <view>x{{item.sh_number}}</view>
              <view>价格:{{item.g_x_price}}</view>
            </view>
          </view>
          <view class="zj_price">
            <view>总价:{{item.o_z_price}}</view>
          </view>
          <van-collapse accordion value="{{ activeName }}" bind:change="onChange">
            <van-collapse-item title="有赞微商城" name="1">
               <view>aaaaaaa</view>
            </van-collapse-item>
            <van-collapse-item title="有赞零售" name="2">
              网店吸粉获客、会员分层营销、一机多种收款，告别经营低效和客户流失
            </van-collapse-item>
            <van-collapse-item title="有赞美业" name="3">
              线上拓客，随时预约，贴心顺手的开单收银
            </van-collapse-item>
</van-collapse>
        </view>
       
      </view>
    </van-tab>
    <van-tab title="未支付">
      <view class="yzf" wx:for="{{order}}" wx:key="item">
        <view class="yzf_da" >
          <view class="yzf_db" wx:for="{{item.orderDetail}}" wx:key="id">
            <view class="yzf_name">
              <image class="yzfimg" src="{{item.img}}"></image>
              <view>{{item.g_name}}</view>
            </view>
            <view class="yzf_sljg">
              <view>x{{item.sh_number}}</view>
              <view>价格:{{item.g_x_price}}</view>
            </view>
          </view>
          <view class="zj_price">
            <view>总价:{{item.o_z_price}}</view>
            <van-button type="warning" bindtap="onClickButton" size="small">立即付款</van-button>
          </view>
        </view>
      </view>
    </van-tab>
  </van-tabs>
</view>

